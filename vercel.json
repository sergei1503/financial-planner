{
  "buildCommand": "cd fplan_v2/frontend && npm install && npm run build",
  "outputDirectory": "fplan_v2/frontend/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" },
    { "source": "/health", "destination": "/api/index.py" },
    { "source": "/((?!api|_vercel).*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "@vercel/python@4.0.0",
      "maxDuration": 30
    }
  }
}
